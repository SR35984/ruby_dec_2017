<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Results Page</title>
	</head>
	<body>
		<% if flash[:success] %>
			<p><%= flash[:success] %></p>
		<% end %>
		<h1>Results Page!!!</h1>
		<h4>Submitted Information</h4>
		<table>
			<tbody>
				<tr>
					<td>Name:</td>
					<td><%= @result['name'] %></td>
				</tr>
				<tr>
					<td>Location:</td>
					<td><%= @result['dojo_location'] %></td>
				</tr>
				<tr>
					<td>Language:</td>
					<td><%= @result['favorite_language'] %></td>
				</tr>
				<tr>
					<td>Comment:</td>
					<td><%= @result['comment'] %></td>
				</tr>
			</tbody>
		</table>
		<form action="/">
			<input type="submit" value="Go Back">
		</form>
	</body>
</html>